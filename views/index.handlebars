<div class="newBook-form">
<h2>Add a Book to your Wishlist</h2>
<form class="newBook-form">

  <div class="form-group">
    <label for="bo">Book Title:</label>
    <input type="text" id="bo" name="title" placeholder="Enter the title">
  </div>

  <div class="form-group">
    <label for="au">Author:</label>
    <input type="text" id="au" name="author" placeholder="Author">
  </div>
  

  <button type="submit">Add Book</button>
</form>
</div>

<div class="container-list">
  <div>
    <div>        
		<h2>Your Wishlist</h2>
  <div>
<ul>
  {{#each books}}
    {{#unless haveRead}}
    <p class="wish-it">
      <button id="read-book" class="read-book" data-id="{{this.id}}">I've Read It!</button>
      </p>
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>
</div>
</div>

<div class="container-list">
<h2>Books you have Read!</h2>
<div>
<ul>
  {{#each books}}
    {{#if haveRead}}
      <p id="boo">
        {{book}} </p>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

	</div>